{
  "name": "back",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "node --max_old_space_size=4096 node_modules/.bin/jest --runInBand",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "stop:postgresql": "sudo systemctl stop postgresql",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:migrate": "npx prisma generate --schema prismaDb && npx prisma db push --schema prismaDb && node prismaDb/migrate.js prismaDb/reset/ && node prismaDb/migrate.js prismaDb/seed/",
    "db:reset": "npx prisma generate --schema prismaDb && npx prisma db push --schema prismaDb && node prismaDb/migrate.js prismaDb/reset/",
    "db:view": "npx prisma studio --schema prismaDb",
    "get:env": "doppler secrets download --project area-all --config dev_back --format env --no-file > .env"
  },
  "dependencies": {
    "@nestjs/axios": "^3.1.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.13",
    "@nestjs/event-emitter": "^2.1.1",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^10.4.13",
    "@nestjs/schedule": "^4.1.2",
    "@nestjs/swagger": "^8.1.0",
    "@prisma/client": "^6.0.1",
    "@slack/web-api": "^7.8.0",
    "@types/bcrypt": "^5.0.2",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "googleapis": "^144.0.0",
    "nodemailer": "^6.9.16",
    "reflect-metadata": "^0.2.0",
    "rss-parser": "^3.13.0",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.4.13",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prisma": "^6.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@prismaService/(.*)$": "<rootDir>/src/microservices/prisma-service/$1",
      "^@userService/(.*)$": "<rootDir>/src/microservices/user-service/$1",
      "^@prismaDb/(.*)$": "<rootDir>/src/prismaDb/$1",
      "^@action-service/(.*)$": "<rootDir>/src/microservices/action-service/$1",
      "^@trigger-service/(.*)$": "<rootDir>/src/microservices/trigger-service/$1",
      "^@reaction-service/(.*)$": "<rootDir>/src/microservices/reaction-service/$1",
      "^@shared/(.*)$": "<rootDir>/src/shared/$1",
      "^@handlers/(.*)$": "<rootDir>/src/microservices/trigger-service/handler/$1",
      "^@common/(.*)$": "<rootDir>/src/common/$1"
    }
  },
  "overrides": {
    "path-to-regexp": "3.3.0"
  }
}
