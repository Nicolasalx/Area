{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@prisma/*": ["prisma/*"],
      "@userService/*": ["src/microservices/user-service/*"],
      "@prismaService/*": ["src/microservices/prisma-service/*"],
      "@action-service/*": ["src/microservices/action-service/*"],
      "@trigger-service/*": ["src/microservices/trigger-service/*"],
      "@reaction-service/*": ["src/microservices/reaction-service/*"],
      "@shared/*": ["src/shared/*"],
      "@common/*": ["src/common/*"]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false
  }
}
